@using (Html.BeginForm("CasePatientInfo", "Patient", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.CaseId)
    <div id="content" class="content">
        <section class="wizard cardiology-section">
            <div class="container">
                <!-- .row -->
                <div class="row">
                    <div class="col-xs-12">

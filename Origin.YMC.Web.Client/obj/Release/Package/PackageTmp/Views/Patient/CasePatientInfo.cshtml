                                                    <label class="control-label">@Resources.GlobalStrings.City</label>
                                                    @Html.DropDownListFor(x => x.CityId, new List<SelectListItem>(), "-- " + Resources.GlobalStrings.Select + "--", new { @id = "ddlCity", @class = "browser-default wizard-select" })


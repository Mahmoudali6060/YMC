                altInput: true,
                altFormat: "F j, Y",
                dateFormat: "m/d/y",
                 locale:'@Resources.GlobalStrings.locale'  
            });
            $("#txtPhone")[0].addEventListener("countrychange", function () {
                $("#txtPhone").val(phoneTel.getNumber(intlTelInputUtils.numberFormat.E164))
            });
            $("#txtPhone").on("change", function () {
                $("#txtPhone").val(phoneTel.getNumber(intlTelInputUtils.numberFormat.E164))
            })
            $("#txtMobilePhone")[0].addEventListener("countrychange", function () {
                $("#txtMobilePhone").val(mobileTel.getNumber(intlTelInputUtils.numberFormat.E164))
            });
            $("#txtMobilePhone").on("change", function () {

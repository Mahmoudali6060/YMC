            })
            $('#CountryId').change(function () {
                $.ajax({
                    type: "post",
                    url: "/Home/GetCities",
                    data: { countryCode: $('#CountryId').val() },
                    datatype: "json",
                    traditional: true,
                    success: function (cities) {
                        $('#ddlCity').empty();
                        $.each(cities, function (index, item) {
                            $('#ddlCity').append('<option value=' + item.Value + '>' + item.Text + ' </option>');
                        });
                    }
                });
            });



        });
    </script>

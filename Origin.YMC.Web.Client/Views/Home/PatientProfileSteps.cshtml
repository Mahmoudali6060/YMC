        var mobileTel = intlTelInput($("#txtMobilePhone")[0], { nationalMode: true })
        phoneTel.setCountry("eg");
        mobileTel.setCountry("eg");

        function chnageValueRejectPatientAgreement(remove) {
            if (remove) {
                $("#RejectPatientAgreement").val("");
            } else {
                if (patientCurrentIndex == 1 || patientCurrentIndex == 2) {
                    $("#RejectPatientAgreement").val("Approve");
                }
            }

        }

